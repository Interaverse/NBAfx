<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox  alignment="CENTER" styleClass="background" prefHeight="450.0" prefWidth="350.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="controller.SeasonController"
       >
    <ImageView fitHeight="200.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="false">
        <image>
            <Image url="@../view/NBA_Back.jpg"/>
        </image>
    </ImageView>
    <Button fx:id="roundButton" mnemonicParsing="false" prefHeight="50.0"
            prefWidth="100.0" text="Round"
            onAction="#addRound"
    />
    <Button fx:id="currentButton" mnemonicParsing="false" prefHeight="50.0"
            prefWidth="100.0" text="Current"
            onAction="#displayRound"
            />
    <Button fx:id="gameButton" mnemonicParsing="false" prefHeight="50.0"
            prefWidth="100.0" text="Game"
            onAction="#playGame"
            />
    <Button fx:id="resultButton" mnemonicParsing="false" prefHeight="50.0"
            prefWidth="100.0" text="Result"
            onAction="#displayResult"
            />
    <Button fx:id="closeButton" mnemonicParsing="false" prefHeight="50.0"
            prefWidth="100.0" text="Close"
            onAction="#close"
            />
    
        
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    
</VBox>
