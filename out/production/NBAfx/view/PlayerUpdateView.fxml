<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>	
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?> 
<?import javafx.geometry.*?>

<VBox alignment="CENTER" styleClass="background" prefHeight="400.0" prefWidth="600.0" spacing="20" 
      xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="controller.PlayerUpdateController"
    >
    <padding>
        <Insets top="10" bottom="10" left="5" right="5" />
    </padding>
    <GridPane alignment="CENTER">
        <padding>
            <Insets top="10" bottom="10" left="5" right="5" />
        </padding>
        <Label text="Player Details" styleClass="label-header" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
        <Label text="Player Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="playerNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Player Credit:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="playerCreditTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Player Age:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="playerAgeTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Player No:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="playerNumberTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>
    <HBox spacing="10">
        <padding>
            <Insets left="10.0" right="10.0" />
        </padding>
        <Button fx:id="updatePlayerButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Update" onAction="#updatePlayer" />
        <Button fx:id="addPlayerButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Add" onAction="#addPlayer"/>
        <Button fx:id="closeButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Close" onAction="#close"/>
    </HBox>
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>

